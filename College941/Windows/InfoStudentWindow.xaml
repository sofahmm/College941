<Window x:Class="College941.Windows.InfoStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:College941.Windows"
        mc:Ignorable="d"
        Title="InfoStudentWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Name="SurnameTb"
                   Grid.ColumnSpan="3"
                   Grid.Row="0"/>
        <TextBlock Name="NameTb"
                   Grid.ColumnSpan="3"
                    Grid.Row="1"/>
        <TextBlock Name="PatronymicTb"
                   Grid.ColumnSpan="3"
                   Grid.Row="2"/>
        <TextBlock Name="GroupTb"
                   Grid.ColumnSpan="3"
                   Grid.Row="3"/>
        <TextBlock Name="LoginTb"
                   Grid.ColumnSpan="3"
                   Grid.Row="4"/>
        <TextBlock Name="PasswordTb"
                   Grid.ColumnSpan="3"
                   Grid.Row="5"/>
    </Grid>
</Window>
