<Window x:Class="College941.Windows.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:College941.Windows"
        mc:Ignorable="d"
        Title="AddStudentWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Фамилия"
                   FontSize="24"
                   HorizontalAlignment="Right"
                   Margin="0 0 10 0"
                   Grid.ColumnSpan="2"
                   Grid.Row="0"/>
        <TextBox Grid.Column="2"
                 Grid.Row="0"
                 FontSize="22"
                 x:Name="SurnameTb"/>
        <TextBlock Text="Имя"
                   FontSize="24"
                   HorizontalAlignment="Right"
                   Margin="0 0 10 0"
                   Grid.ColumnSpan="2"
                   Grid.Row="1"/>
        <TextBox Grid.Column="2"
         Grid.Row="1"
         FontSize="22"
         x:Name="NameTb"/>
        <TextBlock Text="Отчество"
                   FontSize="24"
                   HorizontalAlignment="Right"
                   Margin="0 0 10 0"
                   Grid.ColumnSpan="2"
                   Grid.Row="2"/>
        <TextBox Grid.Column="2"
         Grid.Row="2"
         FontSize="22"
         x:Name="PatronymicTb"/>
        <TextBlock Text="Группа"
                   FontSize="24"
                   HorizontalAlignment="Right"
                   Margin="0 0 10 0"
                   Grid.ColumnSpan="2"
                   Grid.Row="3"/>
        <ComboBox Grid.Column="2"
                  Grid.Row="3"
                  x:Name="groupCmb"
                  ItemsSource="{Binding groups}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text="Логин"
                   FontSize="24"
                   HorizontalAlignment="Right"
                   Margin="0 0 10 0"
                   Grid.ColumnSpan="2"
                   Grid.Row="4"/>
        <TextBox Grid.Column="2"
         Grid.Row="4"
         FontSize="22"
         x:Name="LoginTb"/>
        <TextBlock Text="Пароль"
                   FontSize="24"
                   HorizontalAlignment="Right"
                   Margin="0 0 10 0"
                   Grid.ColumnSpan="2"
                   Grid.Row="5"/>
        <TextBox Grid.Column="2"
         Grid.Row="5"
         FontSize="22"
         x:Name="PasswordTb"/>
        <Button Grid.Column="3"
                Grid.Row="5"
                x:Name="SaveBtn"
                Click="SaveBtn_Click"/>
    </Grid>
</Window>
